#include <stdio.h>

int main() {
    int n,i;

    
    printf("Enter the size of the array: ");
    scanf("%d", &n);

    int arr[n]; 

    
    printf("Enter %d elements of the array:\n", n);
    for (int i = 0; i < n; i++) {
        scanf("%d", &arr[i]); 
    }

    
    printf("The array values are:\n");
    for (int i = 0; i < n; i++) {
        printf("%d ", arr[i]);
 
    }
return 0;
}
